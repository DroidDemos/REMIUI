        <EditText android:gravity="center_vertical" android:id="@id/ev_phone" android:background="@drawable/passport_group_last_item_normal_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/passport_input_phone_hint" android:singleLine="true" android:maxLength="16" android:phoneNumber="true" style="@style/Passport.EditTextStyle" />
