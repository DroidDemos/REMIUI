<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="1" android:layout_width="-1" android:layout_height="-2">
    <TextView android:id="@id/ev_phone_notice" android:layout_width="-1" android:layout_height="-2" android:text="@string/passport_reg_using_phone_number_prompt" style="@style/Passport_TextSecondPrimary" />
    <Spinner android:id="@id/show_sim_info" android:visibility="2" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="@dimen/passport_title_content_margin_v" android:drawSelectorOnTop="true" android:prompt="@string/passport_choose_which_one_sim" />
    <LinearLayout android:id="@id/password_layout" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="@dimen/passport_title_content_margin_v">
        <FrameLayout android:layout_width="-1" android:layout_height="-2">
            <EditText android:layout_gravity="10" android:id="@id/ev_password" android:background="@drawable/passport_group_single_item_normal_bg" android:paddingRight="@dimen/passport_password_alert_icon_padding_right" android:layout_width="-1" android:layout_height="-2" android:hint="@string/passport_input_password_hint" android:password="true" android:singleLine="true" android:maxLength="16" android:inputType="91" style="@style/Passport_EditTextStyle" />
            <ImageView android:layout_gravity="15" android:id="@id/show_password_img" android:layout_width="@dimen/passport_password_img_w" android:layout_height="@dimen/passport_password_img_h" />
        </FrameLayout>
    </LinearLayout>
    <TextView android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="@dimen/passport_title_content_margin_v" android:layout_marginBottom="@dimen/passport_reg_content_bottom_margin" android:text="@string/passport_password_req_notice" style="@style/Passport_TextSecondPrimary" />
    <TextView android:layout_gravity="11" android:id="@id/sms_alert" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="@dimen/passport_title_content_margin_v" android:text="@string/passport_reg_via_sms_alert" style="@style/Passport_TextSecondPrimary" />
    <CheckBox android:layout_gravity="11" android:id="@id/license" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="@dimen/passport_title_content_margin_v" android:checked="true" />
    <TextView android:layout_gravity="11" android:id="@id/tv_register_by_other_ways" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="@dimen/passport_login_reg_notice_bottom_margin" android:text="@string/passport_reg_type_other_ways" style="@style/Passport_HyperLinkButtonStyle" />
    <LinearLayout android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="@dimen/passport_buttons_margin_v">
        <Button android:id="@id/btn_cancel" android:layout_width="0dp" android:layout_height="-2" android:text="@string/passport_btn_return" android:layout_weight="0.5" />
        <Button android:id="@id/btn_password_confirm" android:layout_width="0dp" android:layout_height="-2" android:text="@string/passport_register" android:layout_weight="0.5" />
    </LinearLayout>
</LinearLayout>
